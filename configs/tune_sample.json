{
  "general": {
    "n_trials": 10,
    "random_seed": 42,
    "force_cpu_usage": false,
    "source_images_folder": "demo\\data\\images",
    "source_masks_folder": "demo\\data\\masks",
    "source_checkpoint_path": null,
    "enable_validation": true,
    "train_val_split_ratio": 0.8,
    "transfer_step_results_to_cpu": false,
    "pytorch_benchmark_enabled": false,
    "pytorch_deterministic_enabled": false
  },
  "logging": {
    "run_id": "tuning",
    "include_date": true,
    "target_log_folder": "demo\\hp-logs",
    "enable_progress_bar": true
  },
  "training": {
    "num_epochs": 50,
    "data": {
      "shuffle": true,
      "drop_last": false,
      "pin_memory": true,
      "num_workers": 0,
      "persistent_workers": false
    }
  },
  "validation": {
    "data": {
      "batch_size": 4,
      "shuffle": false,
      "drop_last": false,
      "pin_memory": true,
      "num_workers": 0,
      "persistent_workers": false
    }
  },
  "hyperparameters": {
    "network": {
      "type": "categorical",
      "value": ["unet", "unet++"]
    },
    "network_encoder": {
      "type": "categorical",
      "value": ["resnet18", "resnet34"]
    },
    "encoder_weights": {
      "type": "categorical",
      "value": ["none", "imagenet"]
    },
    "batch_size": {
      "type": "categorical",
      "value": [8, 16]
    },
    "lr": {
      "type": "loguniform",
      "value": [1e-5, 1e-2]
    },
    "weight_decay": {
      "type": "loguniform",
      "value": [1e-6, 1e-3]
    },
    "criterion_weights_0": {
      "type": "float",
      "value": [1e-3, 1.0]
    },
    "criterion_weights_1": {
      "type": "float",
      "value": [1e-3, 1.0]
    },
    "horizontal_flip_probability": {
      "type": "float",
      "value": [0.0, 1.0]
    },
    "vertical_flip_probability": {
      "type": "float",
      "value": [0.0, 1.0]
    },
    "random_brightness_contrast_probability": {
      "type": "float",
      "value": [0.0, 1.0]
    }
  }
}

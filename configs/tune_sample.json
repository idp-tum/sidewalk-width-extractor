{
  "general": {
    "n_trials": 20,
    "random_seed": 42,
    "force_cpu_usage": false,
    "source_images_folder": "demo\\data\\images",
    "source_masks_folder": "demo\\data\\masks",
    "train_val_split_ratio": 0.8,
    "transfer_step_results_to_cpu": false,
    "pytorch_benchmark_enabled": true,
    "pytorch_deterministic_enabled": false
  },
  "logging": {
    "run_id": "sample tune",
    "include_date": true,
    "target_log_folder": "demo\\logs\\tuning",
    "enable_progress_bar": false,
    "save_settings_file": true,
    "save_scalar_metrics": true,
    "save_figure_images": false,
    "save_checkpoint_every_n_epoch": null,
    "save_network_checkpoint": false,
    "save_optimizer_checkpoint": false
  },
  "training": {
    "num_epochs": 50,
    "data": {
      "shuffle": true,
      "drop_last": false,
      "pin_memory": true,
      "num_workers": 0,
      "persistent_workers": false
    }
  },
  "validation": {
    "data": {
      "batch_size": 4,
      "shuffle": false,
      "drop_last": false,
      "pin_memory": true,
      "num_workers": 0,
      "persistent_workers": false
    }
  },
  "hyperparameters": {
    "network": {
      "type": "categorical",
      "value": ["unet", "unet++"]
    },
    "network_encoder": {
      "type": "categorical",
      "value": ["resnet34", "timm-efficientnet-b3", "timm-efficientnet-b4"]
    },
    "encoder_weights": {
      "type": "categorical",
      "value": ["none", "imagenet"]
    },
    "encoder_depth": {
      "type": "int",
      "value": [3, 5]
    },
    "batch_size": {
      "type": "categorical",
      "value": [8, 16]
    },
    "lr": {
      "type": "loguniform",
      "value": [1e-6, 1e-2]
    },
    "weight_decay": {
      "type": "loguniform",
      "value": [1e-6, 1e-3]
    },
    "criterion_weights_0": {
      "type": "float",
      "value": [1e-3, 1.0]
    },
    "criterion_weights_1": {
      "type": "float",
      "value": [1e-3, 1.0]
    },
    "horizontal_flip_probability": {
      "type": "float",
      "value": [0.0, 1.0]
    },
    "vertical_flip_probability": {
      "type": "float",
      "value": [0.0, 1.0]
    },
    "random_brightness_contrast_probability": {
      "type": "float",
      "value": [0.0, 1.0]
    }
  }
}
